class Triangulo: 
    def __init__(self):
        self.b = 0
        self.h = 0
    def calc_area(self):
        return self.b * self.h / 2

x = Triangulo()
x.b = 10
x.h = 10
y = Triangulo()
y.b = float(input("Base: "))
y.h = float(input("Altura: "))
z = Triangulo()

print(y.calc_area())
print(x.calc_area())
